{
  "name": "kcg-crm-backend",
  "version": "1.0.0",
  "description": "crm backend project for a client",
  "main": "server.js",
  "type": "commonjs",
  "engines": {
    "npm": ">=8.0.0 <9.0.0",
    "node": ">=16.0.0 <17.0.0"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ],
  "scripts": {
    "start": "nodemon src/server.ts",
    "build": "rimraf dist && tsc",
    "ts.check": "tsc --project tsconfig.json",
    "add-build": "git add dist",
    "test": "mocha -r ts-node/register tests/**/*.spec.ts",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/server.js\"",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"yarn run watch-ts\" \"yarn run watch-node\""
  },
  "author": "Daniel Nwokocha",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.5.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/http-status": "^1.1.2",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/moment": "^2.13.0",
    "@types/nodemailer": "^6.4.6",
    "@types/validator": "^13.7.10",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.0",
    "cloudinary": "^1.35.0",
    "concurrently": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.17.3",
    "express-validator": "^6.14.0",
    "http-status": "^1.6.2",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.29.4",
    "nodemailer": "^6.8.0",
    "pg": "^8.9.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.28.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.23",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "concurrently": "^7.0.0",
    "mocha": "^10.1.0",
    "nodemon": "^2.0.15",
    "pre-commit": "^1.2.2",
    "prisma": "^4.5.0",
    "rimraf": "^4.4.1",
    "ts-node": "^10.8.0",
    "typescript": "^4.6.4"
  }
}
